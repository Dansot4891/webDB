<% if(state==='create' ){ %>
	<div class="container">

		<h2>유저 생성</h2>
		<form action="/person/create_process" method="post">
			<div class="mb-3">
				<label class="form-label" for="id">아이디</label>
				<input class="form-control" type="text" name="loginid" style="width:300px;" />
			</div>
			<div class="mb-3">
				<label class="form-label" for="id">비밀번호</label>
				<input class="form-control" type="password" name="password" style="width:300px;" />
			</div>
			<div class="mb-3">
				<label class="form-label" for="id">이름</label>
				<input class="form-control" type="text" name="name" style="width:300px;" />
			</div>
			<div class="mb-3">
				<label class="form-label" for="id">주소</label>
				<input class="form-control" type="text" name="address" style="width:300px;" />
			</div>
			<div class="mb-3">
				<label class="form-label" for="id">전화번호(000-0000-0000)</label>
				<input class="form-control" type="text" name="tel" style="width:300px;" />
			</div>
			<div class="mb-3">
				<label class="form-label" for="id">생년월일(20000101)</label>
				<input class="form-control" type="text" name="birth" style="width:300px;" />
			</div>
			<div class="mb-3">
				<label class="form-label" for="id">클래스 (00 : 경영자, 01 : 관리자, 02 : 일반사용자)</label>
				<input class="form-control" type="text" name="class" style="width:300px;" />
			</div>
			<div class="mb-3">
				<label class="form-label" for="id">포인트</label>
				<input class="form-control" type="text" name="point" placeholder="0" style="width:300px;" />
			</div>
			<button class="btn btn-outline-primary btn-sm" type="submit">생성하기</button>
		</form>
	</div>
<% } %>
